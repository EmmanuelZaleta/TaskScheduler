{
  "ConnectionStrings": {
    "Sql": "Server=localhost;Database=NCDR_YCC_Moldeo;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Scheduler": {
    "MaxConcurrency": 4
  },
  "Automation": {
    "Source": "Database",
    "ManifestsPath": "automations"
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/jobhost-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
